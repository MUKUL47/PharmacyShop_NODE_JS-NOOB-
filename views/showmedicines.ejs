 <center>
 <div class="form-group">
<form method="post" action="/searchMed">
  
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter a medicine name (Leave blank to show all)"\
    style="width:400px;"; name="name">
     <button type="submit" class="btn btn-primary">Search</button>
    <form>
    </div></center>
   <table class="table table-hover table-dark" id="req">
  <thead>
    <tr>
      <th >#</th>
      <th >Name</th>
      <th >Quantity</th>
      <th >No of tablets</th>
      <th >Added on</th>
      <th >Expires on</th>
      <th >Description</th>
      
    </tr>
  </thead>
  <tbody>
    <%var x=1;%>
      <%for(var i=0;i<y.length;i++){ %>
       
      <tr>
     
      <th ><%=x++%></th>
      <th ><%=y[i]['name']%></th>
      <th ><%=y[i]['mgQuant']%>mg</th>
      <th ><%=y[i]['tablets']%></th>
      <th ><%=y[i]['date']%></th>
      <th ><%=y[i]['expiryDate']%></th>
      <th ><%=y[i]['description']%></th>
      
      </tr>
<%}%>


  </tbody>
</table>
